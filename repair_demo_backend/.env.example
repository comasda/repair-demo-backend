# Copy this file to .env and adjust values as needed

# Port the API listens on (matches your mini-program globalData.API port 8080)
PORT=8080

# Local development (when running `npm start` on your Ubuntu host):
MONGO_URI=mongodb://localhost:27017/repair_demo

# If running with docker-compose, the service name is 'mongo':
# MONGO_URI=mongodb://mongo:27017/repair_demo

# CORS origins (comma-separated). Use * for allow all (for quick testing)
CORS_ORIGINS=*

JWT_SECRET=change_me
TOKEN_EXPIRES_IN=7d
